<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/click"
    android:background="@color/half_translation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/edit_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50_dp"
            android:gravity="center"
            android:textColor="@color/call_voice_bg_color"
            android:textSize="@dimen/text_size_14"
            android:id="@+id/tv_title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dimen_10_dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:textStyle="normal"
                    android:paddingTop="@dimen/dimen_5_dp"
                    android:drawableTop="@drawable/share_qq"

                    android:textColor="@color/call_voice_bg_color"
                    android:textSize="@dimen/text_size_12"
                    android:gravity="center_horizontal"
                    android:id="@+id/tv_qq"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textStyle="normal"
                    android:drawableTop="@drawable/share_wechat"
                    android:paddingTop="@dimen/dimen_5_dp"

                    android:gravity="center_horizontal"
                    android:textColor="@color/call_voice_bg_color"
                    android:textSize="@dimen/text_size_12"
                    android:id="@+id/tv_wechat"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="朋友圈"
                    android:drawableTop="@drawable/share_we_friend"
                    android:paddingTop="@dimen/dimen_5_dp"
                    android:gravity="center_horizontal"

                    android:maxLines="1"
                    android:textStyle="normal"
                    android:textColor="@color/call_voice_bg_color"
                    android:textSize="@dimen/text_size_12"
                    android:id="@+id/tv_wechat_friend"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/share_qzone"
                    android:paddingTop="@dimen/dimen_5_dp"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="QQ空间"
                    android:textStyle="normal"
                    android:maxLines="1"

                    android:textColor="@color/call_voice_bg_color"
                    android:textSize="@dimen/text_size_12"
                    android:id="@+id/tv_qzone"/>
            </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48_dp"
            android:id="@+id/tv_cancel"
            android:textColor="@color/call_voice_bg_color"
            android:gravity="center"
            android:textSize="@dimen/text_size_16"
            android:background="@color/colorWhite"
            android:textStyle="normal"
            android:text="@string/tv_cancel"/>
    </LinearLayout>
</RelativeLayout>