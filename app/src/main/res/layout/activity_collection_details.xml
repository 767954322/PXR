<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.diting.pingxingren.activity.CollectionDetailsActivity">

    <com.diting.pingxingren.custom.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_collect_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10_dp" />

            <View
                android:id="@+id/lint_one"
                style="@style/devide_line"
                android:layout_height="@dimen/dimen_1_dp"
                android:layout_below="@id/title_bar"
                android:layout_marginLeft="@dimen/dimen_10_dp"
                android:layout_marginRight="@dimen/dimen_10_dp" />

            <TextView
                android:id="@+id/tv_collection_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10_dp"
                android:text="hahahahahahahah" />
            <ImageView
                android:id="@+id/iv_collection_File"
                android:layout_width="@dimen/dimen_50_dp"
                android:layout_height="@dimen/dimen_50_dp"
                android:layout_margin="@dimen/dimen_10_dp"
                android:src="@drawable/icon_coll_file" />
            <ImageView
                android:id="@+id/iv_collection_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10_dp"
               />
            <RelativeLayout
                android:id="@+id/video_rel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_200_dp"
                android:layout_centerInParent="true">


                <VideoView
                    android:id="@+id/video_player_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_200_dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/ivPlayArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_media_play" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/audio_rel"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/music_bg"
                android:layout_margin="@dimen/dimen_20_dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_play" />
            </RelativeLayout>
            <View
                style="@style/devide_line"
                android:layout_height="@dimen/dimen_1_dp"
                android:layout_below="@id/title_bar"
                android:layout_margin="@dimen/dp_10" />

            <TextView
                android:id="@+id/tv_collection_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10_dp"
                android:layout_marginBottom="@dimen/dimen_20_dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
