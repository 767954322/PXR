<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.diting.pingxingren.activity.UniversalAnswerActivity">
    <com.diting.pingxingren.custom.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.diting.pingxingren.custom.TitleBarView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_1_dp"

        android:background="@color/colorWhite"
        android:padding="@dimen/dimen_10_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/universal_answer1"
            android:textColor="@color/color_text_title"
            android:textSize="@dimen/dimen_18_dp" />

        <EditText
            android:id="@+id/tv_universal_answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:background="@color/colorWhite"
            android:hint="@string/universal_answer_tip"
            android:inputType="textMultiLine"
            android:textColor="@color/color_text_title"
            android:textColorHint="@color/color_text_deep"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10_dp"

        android:background="@color/colorWhite"
        android:padding="@dimen/dimen_10_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/universal_answer2"
            android:textColor="@color/color_text_title"
            android:textSize="@dimen/text_size_18" />

        <EditText
            android:id="@+id/tv_universal_answer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:background="@color/colorWhite"
            android:hint="@string/universal_answer_tip"
            android:inputType="textMultiLine"
            android:textColor="@color/color_text_title"
            android:textColorHint="@color/color_text_deep"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"

        android:background="@color/colorWhite"
        android:padding="@dimen/dimen_10_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/universal_answer3"
            android:textColor="@color/color_text_title"
            android:textSize="@dimen/text_size_18" />

        <EditText
            android:id="@+id/tv_universal_answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:background="@color/colorWhite"
            android:hint="@string/universal_answer_tip"
            android:inputType="textMultiLine"
            android:textColor="@color/color_text_title"
            android:textColorHint="@color/color_text_deep"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>
</LinearLayout>
