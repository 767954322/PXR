<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/robotLayout"
        style="@style/CommonLayout"
        android:layout_height="@dimen/dimen_140_dp"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/dimen_8_dp"
            card_view:cardElevation="@dimen/dimen_0_dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon"
                    android:layout_width="@dimen/dimen_55_dp"
                    android:layout_height="@dimen/dimen_55_dp"/>

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimen_10_dp"
                    android:background="@drawable/login_button_selector"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/dimen_3_dp"
                    android:paddingEnd="@dimen/dimen_10_dp"
                    android:paddingStart="@dimen/dimen_10_dp"
                    android:paddingTop="@dimen/dimen_3_dp"
                    android:text="创建"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_16"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>