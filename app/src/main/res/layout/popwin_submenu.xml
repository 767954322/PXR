<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/popwin_bg"
              android:orientation="vertical"
              android:paddingLeft="@dimen/dimen_10_dp"
              android:paddingRight="@dimen/dimen_10_dp">

    <LinearLayout
        android:id="@+id/layout_robot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8_dp"
            android:src="@mipmap/icon_mail"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_balance_search"
            android:drawablePadding="@dimen/dimen_8_dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_18"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        android:background="@color/colorWhite"/>

    <LinearLayout
        android:id="@+id/layout_concern"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8_dp"
            android:src="@mipmap/icon_mail"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_balance_search"
            android:drawablePadding="@dimen/dimen_8_dp"
            android:gravity="center"
            android:text="@string/concern"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_18"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        android:background="@color/colorWhite"/>

    <LinearLayout
        android:id="@+id/layout_knowledge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8_dp"
            android:src="@mipmap/icon_knowledge"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_balance_search"
            android:drawablePadding="@dimen/dimen_8_dp"
            android:gravity="center"
            android:text="@string/knowledge"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_18"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        android:background="@color/colorWhite"/>

    <LinearLayout
        android:id="@+id/layout_mime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8_dp"
            android:src="@mipmap/icon_mail"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_balance_search"
            android:drawablePadding="@dimen/dimen_8_dp"
            android:gravity="center"
            android:text="@string/mime_info"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_18"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dp"
        android:background="@color/colorWhite"/>

    <LinearLayout
        android:id="@+id/layout_mail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8_dp"
            android:src="@mipmap/icon_mail"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_balance_search"
            android:drawablePadding="@dimen/dimen_8_dp"
            android:gravity="center"
            android:text="@string/mail"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_18"/>
    </LinearLayout>

</LinearLayout>  