<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <com.umeng.socialize.shareboard.SocializeImageView
        android:id="@+id/socialize_image_view"
        android:layout_width="@dimen/dimen_50_dp"
        android:layout_height="@dimen/dimen_50_dp"
        android:padding="@dimen/dimen_5_dp"/>

    <TextView
        android:id="@+id/socialize_text_view"
        android:layout_width="@dimen/dimen_60_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_6_dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="未知"
        android:textSize="@dimen/text_size_14" />

</LinearLayout>