<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_dp"
        android:layout_weight="1" />

    <!--<View
        style="@style/devide_line"/>-->

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70_dp"
        android:background="#F8F8F8">

        <RadioGroup
            android:id="@+id/rg_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55_dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tab_chatting"
                style="@style/tab_menu_item"
                android:drawableTop="@drawable/tab_menu_mine"
                android:text="@string/tab_chatting" />

            <RadioButton
                android:id="@+id/tab_communication"
                style="@style/tab_menu_item"
                android:drawableTop="@drawable/tab_menu_concern"
                android:text="@string/tab_communication" />

            <RadioButton
                style="@style/tab_menu_item"
                android:text="@string/tab_home" />

            <RadioButton
                android:id="@+id/tab_knowledge"
                style="@style/tab_menu_item"
                android:drawableTop="@drawable/tab_menu_knowledge"
                android:text="@string/tab_knowledge" />

            <RadioButton
                android:id="@+id/tab_mine"
                style="@style/tab_menu_item"
                android:drawableTop="@drawable/tab_menu_setting"
                android:text="@string/tab_mine" />
        </RadioGroup>

        <Button
            android:id="@+id/tab_home"
            style="@style/tab_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableTop="@drawable/ic_home_n"

            android:text="@string/tab_home" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60_dp"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/dimen_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:visibility="invisible" />

            <Button
                android:layout_width="@dimen/dimen_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible" />

            <Button
                android:layout_width="@dimen/dimen_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" />

            <Button
                android:layout_width="@dimen/dimen_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:visibility="invisible" />

            <Button
                android:layout_width="@dimen/dimen_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btn_main"
                android:layout_width="@dimen/dimen_0_dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>