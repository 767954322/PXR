<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/left_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_5_dp"
                android:paddingLeft="@dimen/dimen_8_dp"
                android:paddingRight="@dimen/dimen_80_dp"
                android:paddingTop="@dimen/dimen_8_dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_left"
        android:layout_width="@dimen/dimen_50_dp"
        android:layout_height="@dimen/dimen_50_dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:src="@mipmap/icon_left"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_left"
        android:background="@drawable/message_left"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:paddingLeft="@dimen/dimen_20_dp"
        android:paddingRight="@dimen/dimen_10_dp"
        android:paddingTop="@dimen/dimen_15_dp">

        <TextView
            android:id="@+id/left_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/color_text_deep"
            android:textSize="@dimen/text_size_18"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dimen_100_dp"
                android:layout_height="@dimen/dimen_150_dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10_dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_book_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_20_dp"
                    android:text="书名"/>

                <TextView
                    android:id="@+id/tv_book_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10_dp"
                    android:text="作者"/>

                <TextView
                    android:id="@+id/tv_book_partner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10_dp"
                    android:text="分享者"/>

                <TextView
                    android:id="@+id/tv_book_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10_dp"
                    android:text="价格"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_book_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介：啊实打实的撒大所大所大所大所大撒所多撒多撒阿打算的撒阿的萨达阿斯达"/>
    </LinearLayout>


</RelativeLayout>