<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical" >

    <com.diting.pingxingren.custom.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="@dimen/dimen_70_dp"
        android:layout_height="@dimen/dimen_70_dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_30_dp"
        android:src="@mipmap/icon_left"/>

    <Button
        android:id="@+id/btn_change_photo"
        android:layout_width="@dimen/dimen_100_dp"
        android:layout_height="@dimen/dimen_30_dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:background="@drawable/change_photo_button"
        android:paddingLeft="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_10_dp"
        android:text="@string/change_photo"
        android:textColor="@color/color_text_deep"
        android:textSize="@dimen/text_size_18"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30_dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20_dp"
            android:drawablePadding="@dimen/dimen_8_dp"
            android:gravity="center"
            android:maxLength="30"
            android:text="@string/robot_name"
            android:textColor="@color/colorButtonDisable"
            android:textSize="@dimen/text_size_18"/>

        <EditText
            android:id="@+id/et_robot_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20_dp"
            android:layout_marginRight="@dimen/dimen_20_dp"
            android:background="@android:color/white"
            android:hint="@string/et_robot_hint"
            android:inputType="text"
            android:maxLines="2"
            android:padding="@dimen/dimen_5_dp"
            android:textColor="@color/color_text_deep"
            android:textColorHint="@color/color_tip"
            android:textSize="@dimen/text_size_18"/>
    </LinearLayout>

    <View
        style="@style/devide_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="@string/company_name"
            android:textColor="@color/colorButtonDisable"
            android:textSize="@dimen/text_size_16"/>

        <EditText
            android:id="@+id/et_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/white"
            android:hint="@string/et_company_hint"
            android:inputType="text"
            android:maxLength="12"
            android:maxLines="2"
            android:padding="5dp"
            android:textColor="@color/color_text_deep"
            android:textColorHint="@color/color_tip"
            android:textSize="@dimen/text_size_18"/>
    </LinearLayout>

    <View
        style="@style/devide_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

</LinearLayout>
