<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/dimen_10_dp"
              android:background="@color/colorWhite"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlSkinning"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_140_dp">

        <TextView
            android:id="@+id/tvUsing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_24_dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_light_green"
            android:gravity="center"
            android:text="@string/using"
            android:textColor="@color/colorWhite"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvSkinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12_dp"
        android:gravity="center"
        android:textSize="@dimen/text_size_16"/>
</LinearLayout>