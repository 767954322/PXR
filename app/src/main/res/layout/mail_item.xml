<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_5_dp"
        android:paddingLeft="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_10_dp"
        android:paddingTop="@dimen/dimen_5_dp">

        <!--<ImageView-->
        <!--android:id="@+id/iv_photo"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:src="@mipmap/icon_left" />-->
        <LinearLayout
            android:id="@+id/ll_point"
            android:layout_width="@dimen/dimen_10_dp"
            android:layout_height="@dimen/dimen_10_dp"
            android:layout_centerVertical="true">

            <View
                android:id="@+id/point"
                android:layout_width="@dimen/dimen_10_dp"
                android:layout_height="@dimen/dimen_10_dp"
                android:background="@drawable/point"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:layout_toRightOf="@+id/ll_point"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="山东撒旦"
                android:textColor="@color/color_text_title"
                android:textSize="@dimen/text_size_18"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:textColor="@color/color_text_deep"
                android:textSize="@dimen/text_size_18"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_20_dp"
            android:src="@mipmap/icon_delete"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>