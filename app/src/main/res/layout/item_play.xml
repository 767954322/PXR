<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_120_dp"
                android:layout_marginLeft="@dimen/dimen_10_dp"
                android:layout_marginRight="@dimen/dimen_10_dp"
                android:background="@drawable/play_bg"
                android:padding="@dimen/dimen_20_dp">

    <LinearLayout
        android:id="@+id/ll_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/corner_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_5_dp">

        <TextView
            android:id="@+id/tv_person"
            android:layout_width="@dimen/dimen_150_dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tv_person"/>

        <View
            android:layout_width="@dimen/dimen_2_dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_5_dp"
            android:background="@color/devide_line"/>

        <ImageView
            android:id="@+id/iv_edit_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5_dp"
            android:src="@mipmap/icon_edit_play"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/corner_white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_5_dp">

        <TextView
            android:id="@+id/tv_food"
            android:layout_width="@dimen/dimen_150_dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tv_food"/>

        <View
            android:layout_width="@dimen/dimen_2_dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_5_dp"
            android:background="@color/devide_line"/>

        <ImageView
            android:id="@+id/iv_edit_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5_dp"
            android:src="@mipmap/icon_edit_play"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_start_bg"
        android:text="开始"
        android:textSize="@dimen/text_size_20"/>
</RelativeLayout>

