<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_select_title"
        style="@style/tv_18dp_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/tv_select_birthday" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.diting.pingxingren.custom.wheelview.WheelView
            android:id="@+id/wv_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.diting.pingxingren.custom.wheelview.WheelView
            android:id="@+id/wv_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <com.diting.pingxingren.custom.wheelview.WheelView
            android:id="@+id/wv_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"

    android:layout_height="wrap_content">
  <TextView
      android:id="@+id/tv_cancle"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="10dp"
      android:text="取消"
      android:gravity="center"
      android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_resure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/color_light_green"
        android:layout_weight="1"/>


</LinearLayout>


</LinearLayout>