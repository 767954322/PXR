<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/call_voice_bg_color">

        <TextView
            android:id="@+id/callName"
            style="@style/CommonText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_40_dp"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_30"/>

        <TextView
            android:id="@+id/callState"
            style="@style/CommonText"
            android:layout_below="@+id/callName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_16_dp"
            android:text="@string/call_connecting"
            android:textSize="@dimen/text_size_16"/>

        <ImageView
            android:id="@+id/voiceChangeImage"
            style="@style/CommonImage"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_40_dp"
            android:layout_marginLeft="@dimen/dimen_40_dp"
            android:layout_marginStart="@dimen/dimen_40_dp"
            android:background="@drawable/voice_mic_bg"/>

        <ImageView
            android:id="@+id/rejectCallImage"
            style="@style/CommonImage"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_40_dp"
            android:layout_marginLeft="@dimen/dimen_40_dp"
            android:layout_marginStart="@dimen/dimen_40_dp"
            android:background="@drawable/voice_call_reject_bg"/>

        <ImageView
            android:id="@+id/endCallImage"
            style="@style/CommonImage"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dimen_40_dp"
            android:background="@drawable/voice_call_reject_bg"/>

        <ImageView
            android:id="@+id/answerCallImage"
            style="@style/CommonImage"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dimen_40_dp"
            android:layout_marginEnd="@dimen/dimen_40_dp"
            android:layout_marginRight="@dimen/dimen_40_dp"
            android:background="@drawable/voice_call_answer_bg"/>
        <ImageView
            android:id="@+id/speakerChangeImage"
            style="@style/CommonImage"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dimen_40_dp"
            android:layout_marginEnd="@dimen/dimen_40_dp"
            android:layout_marginRight="@dimen/dimen_40_dp"
            android:background="@drawable/voice_speaker_bg"/>
    </RelativeLayout>
</layout>