<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/articleView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_120_dp"
                android:background="@color/colorWhite"
                android:padding="@dimen/dimen_16_dp">

    <TextView
        android:id="@+id/tvArticleTitle"
        style="@style/CommonText.Title"
        android:gravity="start|center_vertical"
        android:maxLength="12"
        android:ellipsize="end"
        android:textColor="@color/common_title_text_color"/>

    <TextView
        android:id="@+id/tvArticleContent"
        style="@style/CommonText"
        android:layout_below="@+id/tvArticleTitle"
        android:layout_marginTop="@dimen/dimen_6_dp"
        android:text="..."
        android:textColor="@color/common_title_text_color"/>

    <TextView
        android:id="@+id/tvArticleTime"
        style="@style/CommonText"
        android:layout_width="@dimen/dimen_70_dp"
        android:layout_alignParentBottom="true"
        android:gravity="start|center_vertical"
        android:textColor="@color/color_text_deep"
        android:textSize="@dimen/text_size_16"/>

    <TextView
        android:id="@+id/tvArticleType"
        style="@style/CommonText"
        android:layout_width="@dimen/dimen_70_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginStart="@dimen/dimen_10_dp"
        android:layout_toEndOf="@+id/tvArticleTime"
        android:layout_toRightOf="@+id/tvArticleTime"
        android:background="@color/commonColor"
        android:textSize="@dimen/text_size_16"/>

    <ImageView
        android:id="@+id/ivArticleStar"
        android:layout_width="@dimen/dimen_20_dp"
        android:layout_height="@dimen/dimen_20_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginStart="@dimen/dimen_10_dp"
        android:layout_toEndOf="@+id/tvArticleType"
        android:layout_toRightOf="@+id/tvArticleType"
        android:background="@drawable/ic_star_n"
        android:visibility="visible"/>
</RelativeLayout>