<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#F8F8F8"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20_dp"
        android:layout_marginTop="@dimen/dimen_10_dp">

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/dimen_5_dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_16_dp"
            android:layout_marginStart="@dimen/dimen_16_dp"
            android:background="#00C4C2"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_8_dp"
            android:layout_marginStart="@dimen/dimen_8_dp"
            android:layout_toEndOf="@+id/view"
            android:layout_toRightOf="@+id/view"
            android:text="青年"
            android:textColor="#646464"/>
    </RelativeLayout>

    <com.diting.pingxingren.custom.NotScrollGridView
        android:id="@+id/voicePeopleGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10_dp"
        android:background="#FFFFFF"
        android:horizontalSpacing="@dimen/dimen_1_dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:verticalSpacing="@dimen/dimen_3_dp"/>
</LinearLayout>