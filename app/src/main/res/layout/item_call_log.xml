<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:id="@+id/llItem"
    android:orientation="vertical">

    <View style="@style/devide_line" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_90_dp"
        android:paddingLeft="@dimen/dimen_10_dp"
        android:paddingRight="@dimen/dimen_35_dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_photo"
         style="@style/Image_header"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_left" />

        <LinearLayout
            android:id="@+id/layout_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:layout_marginRight="@dimen/dimen_5_dp"
            android:layout_toLeftOf="@+id/ll_concern"
            android:layout_toRightOf="@+id/iv_photo"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_robot_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学吧"
                    android:textColor="@color/color_text_title"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_20_dp"
                    android:background="@drawable/searchview_bg"
                    android:padding="@dimen/dimen_5_dp"
                    android:text="备注"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:singleLine="true"
                android:text="逆流而上科技有限公司"
                android:textColor="@color/color_text_deep"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_20_dp"
                android:layout_marginTop="@dimen/dimen_5_dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_state"
                    android:layout_width="@dimen/dimen_20_dp"
                    android:layout_height="@dimen/dimen_20_dp"
                    android:src="@drawable/icon_call_out" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_5_dp"
                    android:gravity="center_vertical"
                    android:text="2017-08-17 09:58:00"
                    android:textColor="@color/color_text_light"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_5_dp"
                    android:gravity="center_vertical"
                    android:text="09:58:00"
                    android:textColor="@color/color_text_light"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>