<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/rl_top_click"
        android:layout_weight="2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:id="@+id/iv_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10_dp"
            android:id="@+id/tv_top_source"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_tip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_top_title"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:layout_above="@+id/tv_top_source"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_16"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rl_two_click"
            android:padding="@dimen/common_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_two_title"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/color_text_nomal"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_two_source"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_tip"/>
        </RelativeLayout>

        <View
            android:layout_width="@dimen/dimen_1_dp"
            android:layout_height="match_parent"
            android:background="@color/colorGray"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rl_three_click"
            android:padding="@dimen/common_padding">

            <TextView
                android:id="@+id/tv_three_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_text_nomal"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_three_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/color_tip"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rl_four_click"
            android:padding="@dimen/common_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_four_title"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/color_text_nomal"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_four_source"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_tip"/>
        </RelativeLayout>

        <View
            android:layout_width="@dimen/dimen_1_dp"
            android:layout_height="match_parent"
            android:background="@color/colorGray"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/rl_five_click"
            android:padding="@dimen/common_padding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_five_title"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/color_text_nomal"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_five_source"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/color_tip"/>

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/dimen_10_dp"
        android:id="@+id/rl_six_click"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_six_title"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_text_nomal"
            android:textSize="@dimen/text_size_16"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_six_source"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_tip"/>
    </RelativeLayout>

</LinearLayout>