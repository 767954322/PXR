<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light"/>

    <style name="Splash" parent="MyTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="MyTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.PopupMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/colorLightBlue</item>
    </style>

    <style name="Theme.InCallScreen" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:popupMenuStyle">@style/Theme.PopupMenu</item>
    </style>

    <style name="AnimTools" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_in</item>
        <item name="android:windowExitAnimation">@anim/push_out</item>
    </style>

    <style name="top_concerned">
        <item name="android:layout_height">@dimen/dimen_30_dp</item>
        <item name="android:layout_width">@dimen/dimen_0_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@drawable/concern_top_font</item>
        <item name="android:background">@drawable/top_concerned</item>
    </style>

    <style name="top_ranking_list">
        <item name="android:layout_height">@dimen/dimen_30_dp</item>
        <item name="android:layout_width">@dimen/dimen_0_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@drawable/concern_top_font</item>
        <item name="android:background">@drawable/top_ranking_list</item>
    </style>

    <style name="et_user_info">
        <item name="android:layout_height">@dimen/dimen_50_dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:drawablePadding">@dimen/dimen_8_dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/color_text_deep</item>
        <item name="android:textColorHint">@color/colorButtonDisable</item>
    </style>

    <style name="info_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_40_dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:paddingLeft">@dimen/dimen_10_dp</item>
        <item name="android:paddingRight">@dimen/dimen_10_dp</item>
    </style>

    <style name="item_info_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">@dimen/dimen_15_dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/color_text_title</item>
    </style>

    <style name="item_info_iv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@mipmap/icon_arrow_right</item>
    </style>

    <style name="btn_send_message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_30_dp</item>
        <item name="android:paddingLeft">@dimen/dimen_5_dp</item>
        <item name="android:paddingRight">@dimen/dimen_5_dp</item>
        <!--<item name="android:textColor">@color/colorWhite</item>-->
        <!--<item name="android:background">@drawable/login_button_selector</item>-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/color_light_green</item>
        <item name="android:text">@string/send_message</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="mdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/half_translation</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorWhite</item>
        <item name="tabIndicatorHeight">@dimen/dimen_2_dp</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
        <!--<item name="tabIndicatorColor">@color/transparent</item>-->
        <item name="tabTextAppearance">@style/MyTabLayoutTextAppearance</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="tv_setting_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">@dimen/dimen_10_dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_text_title</item>
        <item name="android:drawablePadding">@dimen/dimen_8_dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_16</item>

    </style>

    <style name="et_setting_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/dimen_10_dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_5_dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/color_text_deep</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorHint">@color/color_text_deep</item>
    </style>

    <style name="btn_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_40_dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/login_button_selector</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginLeft">@dimen/dimen_30_dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_30_dp</item>
    </style>

    <style name="rl_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:paddingLeft">@dimen/dimen_30_dp</item>
        <item name="android:paddingRight">@dimen/dimen_30_dp</item>
    </style>

    <style name="devide_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1_dp</item>
        <item name="android:background">@color/devide_line</item>
    </style>

    <!--自定义dialog背景全透明无边框theme -->
    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme_audioDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@mipmap/tb_dialog_loading_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="tab_menu_item">
        <item name="android:layout_width">@dimen/dimen_50_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/dimen_5_dp</item>
        <item name="android:textColor">@drawable/tab_menu_text</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <!--<item name="android:textSize">@dimen/text_size_18</item>-->
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="SubMenuAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_in</item>
        <item name="android:windowExitAnimation">@anim/push_out</item>
    </style>

    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1_dp</item>
        <item name="android:background">@color/devide_line</item>
    </style>

    <style name="LineVertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/dimen_1_dp</item>
        <item name="android:background">@color/devide_line</item>
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="Dialog_Animation" parent="android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_left_out</item>
    </style>

    <style name="CustomDialog_Translucent" parent="CustomDialog">
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="CommonDialog">
        <item name="android:layout_width">@dimen/dimen_260_dp</item>
        <item name="android:layout_height">@dimen/dimen_140_dp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TextBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_nomal</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="TextMiddle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_light</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <!-- Layout. -->

    <style name="CommonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorGray</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CommonLayout.Title" parent="CommonLayout">
        <item name="android:layout_height">@dimen/dimen_50_dp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="CommonLayout.VideoCall">
        <item name="android:layout_height">@dimen/dimen_80_dp</item>
        <item name="android:background">@null</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginBottom">@dimen/dimen_30_dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="CommonLayout.InputLayout">
        <item name="android:layout_height">@dimen/dimen_40_dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_30_dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_30_dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_16_dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Text. -->

    <style name="CommonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="CommonText.Title" parent="CommonText">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/common_title_text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxWidth">@dimen/dimen_200_dp</item>
    </style>

    <style name="CommonText.Chat" parent="CommonText">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <!-- Button. -->

    <style name="CommonButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dimen_16_dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_16_dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CommonButton.TitleBarButton" parent="CommonButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/commonColor</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <!-- Image. -->

    <style name="CommonImage">
        <item name="android:layout_width">@dimen/dimen_40_dp</item>
        <item name="android:layout_height">@dimen/dimen_40_dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="CommonImage.TitleBarImage">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="CommonImage.VoiceCall">
        <item name="android:layout_width">@dimen/dimen_80_dp</item>
        <item name="android:layout_height">@dimen/dimen_80_dp</item>
        <item name="android:scaleType">center</item>
    </style>
    <!-- EditText. -->
    <style name="CommonEdit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_deep</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@drawable/send_btn_disable</item>
    </style>
    <!--头像图片控制小     60dp-->
    <style name="Image_header">
        <item name="android:layout_width">@dimen/dimen_60_dp</item>
        <item name="android:layout_height">@dimen/dimen_60_dp</item>
    </style>

    <!--头像图片控制小       50dp-->
    <style name="Image_header_Small">
        <item name="android:layout_width">@dimen/dimen_50_dp</item>
        <item name="android:layout_height">@dimen/dimen_50_dp</item>
    </style>

    <!--TextView  18dp  color：color_light_green   访问管理-->
    <style name="tv_18dp_lightgreen">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/color_light_green</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--extView  18dp  color：color_text_deep  访问管理-->
    <style name="tv_18dp_text_deep">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/color_text_deep</item>
    </style>
    <!--extView  18dp  color：color_text_title  访问管理-->
    <style name="tv_18dp_text_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/color_text_title</item>
    </style>

    <style name="tv_16dp_text_light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/color_text_light</item>
    </style>

    <style name="tv_16dp_text_deep">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/color_text_deep</item>
    </style>

    <!--<style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/register_agreement_selector</item>
    </style>-->
</resources>
